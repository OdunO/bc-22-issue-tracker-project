<% include partials/header2 %>
	<div id="case">
		<h1> <%= title %></h1>
		<% if(Object.keys(issues).length === 0) { %>
			<br><br><br><br><br><br><br><br><h2> YOU HAVE NOT RAISED ANY ISSUE </h2>
		<% } else { %>
		<table class="table table-hover">
		
			<thead>
				<tr>
					<td>DESCRIPTION</td>
					<td>PRIORITY</td>
					<td>DEPARTMENT</td>
					<td>STATUS</td>
					<td>ASSIGNED TO</td>
				</tr>
			</thead>
			<tbody>
			<% issues.forEach(function(issue){ %>
				<tr>
					<td> <%= issue.description %> </td>
					<td> <%= issue.priority %> </td>
					<td> <%= issue.department %> </td>
					<td> <%= issue.status %>  </td>
					<td> <%= issue.assign %>  </td>
				</tr>
			<tbody>					
			<% }) %>
		</table>
		<% } %>
		
	</div>
<% include partials/footer %>